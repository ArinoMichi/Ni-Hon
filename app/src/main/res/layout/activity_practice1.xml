<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practice1">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/question"
        android:background="@drawable/round_question"
        android:layout_height="wrap_content"
        android:text="Choose the correct kana for 'a':"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="40dp"
        android:textSize="20dp"/>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"> <!-- collapse the first column of the table row-->


        <!-- first row of the table layout-->
        <TableRow
            android:id="@+id/f1"
            android:layout_width="fill_parent"

            android:layout_height="wrap_content">

            <!-- first element of the row that is the part of table but it is invisible-->
            <TextView
                android:id="@+id/an1"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="200dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_ans"
                android:padding="18dip"
                android:text="Columns 1"
                android:textColor="#000"
                android:textSize="18dp" />

            <!-- second element of the row that is shown in the screenshot-->
            <TextView
                android:id="@+id/an2"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_ans"
                android:padding="18dip"
                android:text="Columns 2"
                android:textColor="#000"
                android:textSize="18dp" />
        </TableRow>
        <TableRow
            android:id="@+id/f2"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- first element of the row that is the part of table but it is invisible-->
            <TextView
                android:id="@+id/an3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:background="@drawable/round_ans"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:padding="18dip"
                android:text="Columns 1"
                android:textColor="#000"
                android:textSize="18dp" />

            <!-- second element of the row that is shown in the screenshot-->
            <TextView
                android:id="@+id/an4"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/round_ans"
                android:padding="18dip"
                android:text="Columns 2"
                android:textColor="#000"
                android:textSize="18dp" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>